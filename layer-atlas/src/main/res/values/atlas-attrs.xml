<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ###################### -->
    <!-- Atlas Component Styles -->
    <!-- ###################### -->
    <attr name="AtlasConversationList" format="reference"/>
    <attr name="AtlasMessageComposer" format="reference"/>
    <attr name="AtlasMessageList" format="reference"/>
    <attr name="AtlasParticipantPicker" format="reference"/>
    <attr name="AtlasTypingIndicator" format="reference"/>


    <!-- #################################### -->
    <!-- Styleable Atlas Component Attributes -->
    <!-- #################################### -->

    <!-- TODO: use "android:" when possible  -->
    <declare-styleable name="AtlasConversationsList">
        <attr name="cellTitleTextColor"/>
        <attr name="cellTitleTextTypeface"/>
        <attr name="cellTitleTextStyle"/>
        <attr name="cellTitleUnreadTextColor"/>
        <attr name="cellTitleUnreadTextTypeface"/>
        <attr name="cellTitleUnreadTextStyle"/>
        <attr name="cellSubtitleTextColor"/>
        <attr name="cellSubtitleTextTypeface"/>
        <attr name="cellSubtitleTextStyle"/>
        <attr name="cellSubtitleUnreadTextColor"/>
        <attr name="cellSubtitleUnreadTextTypeface"/>
        <attr name="cellSubtitleUnreadTextStyle"/>
        <attr name="cellBackgroundColor"/>
        <attr name="cellUnreadBackgroundColor"/>
        <attr name="dateTextColor"/>
        <attr name="avatarTextColor"/>
        <attr name="avatarBackgroundColor"/>
    </declare-styleable>

    <!-- TODO: use "android:" when possible  -->
    <declare-styleable name="AtlasMessageComposer">
        <attr name="composerTextColor"/>
        <attr name="composerTextSize"/>
        <attr name="composerTextTypeface"/>
        <attr name="composerTextStyle"/>
        <attr name="android:enabled" />
    </declare-styleable>

    <!-- TODO: use "android:" when possible  -->
    <declare-styleable name="AtlasMessagesList">
        <attr name="myBubbleColor"/>
        <attr name="myTextColor"/>
        <attr name="myTextSize"/>
        <attr name="myTextTypeface"/>
        <attr name="myTextStyle"/>
        <attr name="theirBubbleColor"/>
        <attr name="theirTextColor"/>
        <attr name="theirTextSize"/>
        <attr name="theirTextTypeface"/>
        <attr name="theirTextStyle"/>
        <attr name="dateTextColor"/>
        <attr name="avatarTextColor"/>
        <attr name="avatarBackgroundColor"/>
    </declare-styleable>

    <!-- TODO: use "android:" when possible  -->
    <declare-styleable name="AtlasParticipantPicker">
        <attr name="inputTextColor"/>
        <attr name="inputTextTypeface"/>
        <attr name="inputTextStyle"/>
        <attr name="listTextColor"/>
        <attr name="listTextTypeface"/>
        <attr name="listTextStyle"/>
        <attr name="avatarBackgroundColor"/>
        <attr name="avatarTextColor"/>
        <attr name="chipBackgroundColor"/>
        <attr name="chipTextColor"/>
        <attr name="chipTextTypeface"/>
        <attr name="chipTextStyle"/>
    </declare-styleable>

    <!-- TODO: use "android:" when possible  -->
    <declare-styleable name="AtlasTypingIndicator">
        <attr name="indicatorTextColor"/>
        <attr name="indicatorTextSize"/>
        <attr name="indicatorTextTypeface"/>
        <attr name="indicatorTextStyle"/>
    </declare-styleable>


    <!-- ####################### -->
    <!-- Atlas Attribute Formats -->
    <!-- ####################### -->

    <!-- conversations list -->
    <attr name="cellTitleTextColor" format="color|reference"/>
    <attr name="cellTitleTextTypeface" format="string|reference"/>
    <attr name="cellTitleTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="cellTitleUnreadTextColor" format="color|reference"/>
    <attr name="cellTitleUnreadTextTypeface" format="string|reference"/>
    <attr name="cellTitleUnreadTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="cellSubtitleTextColor" format="color|reference"/>
    <attr name="cellSubtitleTextTypeface" format="string|reference"/>
    <attr name="cellSubtitleTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="cellSubtitleUnreadTextColor" format="color|reference"/>
    <attr name="cellSubtitleUnreadTextTypeface" format="string|reference"/>
    <attr name="cellSubtitleUnreadTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="cellBackgroundColor" format="color|reference"/>
    <attr name="cellUnreadBackgroundColor" format="color|reference"/>
    <attr name="dateTextColor" format="color|reference"/>
    <attr name="avatarTextColor" format="color|reference"/>
    <attr name="avatarBackgroundColor" format="color|reference"/>

    <!-- message composer -->
    <attr name="composerTextColor" format="color|reference"/>
    <attr name="composerTextSize" format="dimension|reference"/>
    <attr name="composerTextTypeface" format="string|reference"/>
    <attr name="composerTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>

    <!-- messages list -->
    <attr name="myBubbleColor" format="color|reference"/>
    <attr name="myTextColor" format="color|reference"/>
    <attr name="myTextSize" format="dimension|reference"/>
    <attr name="myTextTypeface" format="string|reference"/>
    <attr name="myTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="theirBubbleColor" format="color|reference"/>
    <attr name="theirTextColor" format="color|reference"/>
    <attr name="theirTextSize" format="dimension|reference"/>
    <attr name="theirTextTypeface" format="string|reference"/>
    <attr name="theirTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>

    <!-- participants picker -->
    <attr name="inputTextColor" format="color|reference"/>
    <attr name="inputTextTypeface" format="string|reference"/>
    <attr name="inputTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="listTextColor" format="color|reference"/>
    <attr name="listTextTypeface" format="string|reference"/>
    <attr name="listTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>
    <attr name="chipBackgroundColor" format="color|reference"/>
    <attr name="chipTextColor" format="color|reference"/>
    <attr name="chipTextTypeface" format="string|reference"/>
    <attr name="chipTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>

    <!-- typing indicator -->
    <attr name="indicatorTextColor" format="color|reference"/>
    <attr name="indicatorTextSize" format="dimension|reference"/>
    <attr name="indicatorTextTypeface" format="string|reference"/>
    <attr name="indicatorTextStyle">
        <flag name="normal" value="0"/>
        <flag name="bold" value="1"/>
        <flag name="italic" value="2"/>
    </attr>

</resources>